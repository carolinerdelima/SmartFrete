{
    "openapi": "3.0.0",
    "info": {
        "title": "SmartFrete API",
        "description": "Documentação da API de simulação de fretes",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://smartfrete.local",
            "description": "Servidor local"
        }
    ],
    "paths": {
        "/api/metrics": {
            "get": {
                "tags": [
                    "Métricas"
                ],
                "summary": "Retorna métricas agregadas de cotações",
                "description": "Retorna as métricas por transportadora, o frete mais barato e o mais caro.",
                "operationId": "getMetrics",
                "parameters": [
                    {
                        "name": "last_quotes",
                        "in": "query",
                        "description": "Número de últimas cotações a considerar (ex: 10). Se omitido, considera todas.",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 10
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Métricas retornadas com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "by_carrier": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "carrier": {
                                                        "type": "string",
                                                        "example": "JT"
                                                    },
                                                    "quotes_count": {
                                                        "type": "integer",
                                                        "example": 3
                                                    },
                                                    "total_freight": {
                                                        "type": "string",
                                                        "example": "2007.56"
                                                    },
                                                    "average_freight": {
                                                        "type": "string",
                                                        "example": "669.19"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "cheapest_freight": {
                                            "properties": {
                                                "carrier": {
                                                    "type": "string",
                                                    "example": "AZUL CARGO"
                                                },
                                                "service": {
                                                    "type": "string",
                                                    "example": "Convencional"
                                                },
                                                "freight_price": {
                                                    "type": "string",
                                                    "example": "13.87"
                                                },
                                                "delivery_days": {
                                                    "type": "integer",
                                                    "example": 2
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "most_expensive_freight": {
                                            "properties": {
                                                "carrier": {
                                                    "type": "string",
                                                    "example": "RAPIDÃO FR (TESTE)"
                                                },
                                                "service": {
                                                    "type": "string",
                                                    "example": "teste2"
                                                },
                                                "freight_price": {
                                                    "type": "string",
                                                    "example": "4596.55"
                                                },
                                                "delivery_days": {
                                                    "type": "integer",
                                                    "example": 5
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/quote": {
            "post": {
                "tags": [
                    "Cotação"
                ],
                "summary": "Simular cotação de frete",
                "operationId": "ee2c7ef7e6690a499709be0e0cd8536a",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "recipient",
                                    "simulation_type",
                                    "volumes"
                                ],
                                "properties": {
                                    "recipient": {
                                        "properties": {
                                            "address": {
                                                "properties": {
                                                    "zipcode": {
                                                        "type": "string",
                                                        "example": "29161376"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "type": "object"
                                    },
                                    "simulation_type": {
                                        "type": "array",
                                        "items": {
                                            "type": "integer"
                                        },
                                        "example": [
                                            0
                                        ]
                                    },
                                    "volumes": {
                                        "type": "array",
                                        "items": {
                                            "properties": {
                                                "category": {
                                                    "type": "string",
                                                    "example": "8"
                                                },
                                                "amount": {
                                                    "type": "integer",
                                                    "example": 2
                                                },
                                                "unitary_weight": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 1.5
                                                },
                                                "unitary_price": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 250
                                                },
                                                "sku": {
                                                    "type": "string",
                                                    "example": "PROD001"
                                                },
                                                "height": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 10
                                                },
                                                "width": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 15
                                                },
                                                "length": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 20
                                                }
                                            },
                                            "type": "object"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "carrier": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "name": {
                                                        "type": "string",
                                                        "example": "Transportadora X"
                                                    },
                                                    "service": {
                                                        "type": "string",
                                                        "example": "Expresso"
                                                    },
                                                    "deadline": {
                                                        "type": "integer",
                                                        "example": 3
                                                    },
                                                    "price": {
                                                        "type": "number",
                                                        "format": "float",
                                                        "example": 23.5
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Métricas",
            "description": "Métricas"
        },
        {
            "name": "Cotação",
            "description": "Cotação"
        }
    ]
}