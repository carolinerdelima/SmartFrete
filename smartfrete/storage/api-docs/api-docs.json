{
    "openapi": "3.0.0",
    "info": {
        "title": "SmartFrete API",
        "description": "Documentação da API de simulação de fretes",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://smartfrete.local",
            "description": "Servidor local"
        }
    ],
    "paths": {
        "/api/metrics": {
            "get": {
                "tags": [
                    "Métricas"
                ],
                "summary": "Retorna métricas agregadas de cotações",
                "description": "Retorna as métricas por transportadora, o frete mais barato e o mais caro.",
                "operationId": "getMetrics",
                "parameters": [
                    {
                        "name": "last_quotes",
                        "in": "query",
                        "description": "Número de últimas cotações a considerar (ex: 10). Se omitido, considera todas.",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 10
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Métricas retornadas com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "by_carrier": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "carrier": {
                                                        "type": "string",
                                                        "example": "JT"
                                                    },
                                                    "quotes_count": {
                                                        "type": "integer",
                                                        "example": 3
                                                    },
                                                    "total_freight": {
                                                        "type": "string",
                                                        "example": "2007.56"
                                                    },
                                                    "average_freight": {
                                                        "type": "string",
                                                        "example": "669.19"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "cheapest_freight": {
                                            "properties": {
                                                "carrier": {
                                                    "type": "string",
                                                    "example": "AZUL CARGO"
                                                },
                                                "service": {
                                                    "type": "string",
                                                    "example": "Convencional"
                                                },
                                                "freight_price": {
                                                    "type": "string",
                                                    "example": "13.87"
                                                },
                                                "delivery_days": {
                                                    "type": "integer",
                                                    "example": 2
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "most_expensive_freight": {
                                            "properties": {
                                                "carrier": {
                                                    "type": "string",
                                                    "example": "RAPIDÃO FR (TESTE)"
                                                },
                                                "service": {
                                                    "type": "string",
                                                    "example": "teste2"
                                                },
                                                "freight_price": {
                                                    "type": "string",
                                                    "example": "4596.55"
                                                },
                                                "delivery_days": {
                                                    "type": "integer",
                                                    "example": 5
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/quote": {
            "post": {
                "tags": [
                    "Cotações"
                ],
                "summary": "Solicita simulação de frete",
                "description": "Retorna cotações de frete baseadas nos dados enviados",
                "operationId": "createQuote",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "recipient",
                                    "dispatchers",
                                    "simulation_type"
                                ],
                                "properties": {
                                    "recipient": {
                                        "required": [
                                            "zipcode"
                                        ],
                                        "properties": {
                                            "zipcode": {
                                                "type": "string",
                                                "example": "90200000"
                                            }
                                        },
                                        "type": "object"
                                    },
                                    "dispatchers": {
                                        "type": "array",
                                        "items": {
                                            "properties": {
                                                "volumes": {
                                                    "type": "array",
                                                    "items": {
                                                        "required": [
                                                            "category",
                                                            "amount",
                                                            "sku",
                                                            "height",
                                                            "width",
                                                            "length",
                                                            "unitary_price",
                                                            "unitary_weight"
                                                        ],
                                                        "properties": {
                                                            "category": {
                                                                "type": "string",
                                                                "example": "1"
                                                            },
                                                            "amount": {
                                                                "type": "integer",
                                                                "example": 2
                                                            },
                                                            "sku": {
                                                                "type": "string",
                                                                "example": "AB123"
                                                            },
                                                            "description": {
                                                                "type": "string",
                                                                "example": "Caixa de livros"
                                                            },
                                                            "height": {
                                                                "type": "number",
                                                                "format": "float",
                                                                "example": 0.2
                                                            },
                                                            "width": {
                                                                "type": "number",
                                                                "format": "float",
                                                                "example": 0.3
                                                            },
                                                            "length": {
                                                                "type": "number",
                                                                "format": "float",
                                                                "example": 0.4
                                                            },
                                                            "unitary_price": {
                                                                "type": "number",
                                                                "format": "float",
                                                                "example": 45.5
                                                            },
                                                            "unitary_weight": {
                                                                "type": "number",
                                                                "format": "float",
                                                                "example": 1.2
                                                            }
                                                        },
                                                        "type": "object"
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "simulation_type": {
                                        "type": "array",
                                        "items": {
                                            "type": "integer",
                                            "example": 0
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Cotações retornadas com sucesso"
                    },
                    "422": {
                        "description": "Erro de validação"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Métricas",
            "description": "Métricas"
        },
        {
            "name": "Cotações",
            "description": "Cotações"
        }
    ]
}